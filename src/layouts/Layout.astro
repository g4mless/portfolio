---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="g4mless Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/avatar.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<nav>
			<a href="/">Home</a>
			<a href="/projects">Projects</a>
			<a href="/music">Music</a>
		</nav>
		<slot />
	</body>
</html>

<style>
	nav {
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		padding: 1.5rem;
		display: flex;
		gap: 2rem;
		z-index: 10;
	}
</style>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&display=swap');

	html {
		font-family: 'JetBrains Mono', monospace;
		background: #0F0015;
	}
	body {
		margin: 0;
		padding: 2rem;
		padding-top: 4rem;
		color: #FFFFFF;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
	}
    a {
        color: #FFFFFF;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
</style>